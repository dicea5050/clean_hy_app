<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>銀行口座一覧</h1>
    <%= link_to '新規作成', new_bank_account_path, class: 'btn btn-primary' %>
  </div>

  <div class="card shadow">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>銀行名</th>
              <th>支店名</th>
              <th>口座種別</th>
              <th>口座番号</th>
              <th>口座名義</th>
              <th>状態</th>
              <th>操作</th>
            </tr>
          </thead>

          <tbody>
            <% @bank_accounts.each do |bank_account| %>
              <tr>
                <td><%= bank_account.bank_name %></td>
                <td><%= bank_account.branch_name %></td>
                <td><%= bank_account.account_type %></td>
                <td><%= bank_account.account_number %></td>
                <td><%= bank_account.account_holder %></td>
                <td>
                  <% if bank_account.disabled? %>
                    <span class="badge bg-secondary">無効</span>
                  <% else %>
                    <span class="badge bg-success">有効</span>
                  <% end %>
                </td>
                <td>
                  <%= render 'shared/index_action_buttons',
                              show_path: bank_account_path(bank_account),
                              edit_path: edit_bank_account_path(bank_account),
                              delete_path: bank_account_path(bank_account) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-3">
    <%= paginate @bank_accounts %>
  </div>

  <%= render 'shared/masters_back_button' %>
</div>