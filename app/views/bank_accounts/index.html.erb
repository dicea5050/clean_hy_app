<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>銀行口座一覧</h1>
    <%= link_to '新規作成', new_bank_account_path, class: 'btn btn-primary' %>
  </div>

  <div class="table-responsive">
    <table class="table bank-accounts-index-table" style="table-layout: fixed; width: 100%;">
      <thead>
        <tr>
          <th style="width: 180px;">銀行名</th>
          <th style="width: 170px;">支店名</th>
          <th style="width: 100px;">口座種別</th>
          <th style="width: 150px;">口座番号</th>
          <th style="width: 220px;">口座名義</th>
          <th style="width: 80px;">状態</th>
          <th style="width: 200px;">操作</th>
        </tr>
      </thead>

      <tbody>
        <% @bank_accounts.each do |bank_account| %>
          <tr>
            <td><small><%= bank_account.bank_name %></small></td>
            <td><small><%= bank_account.branch_name %></small></td>
            <td><small><%= bank_account.account_type %></small></td>
            <td><small><%= bank_account.account_number %></small></td>
            <td><small><%= bank_account.account_holder %></small></td>
            <td>
              <span class="<%= bank_account_status_badge_class(bank_account.disabled) %>"><%= bank_account_status_badge_text(bank_account.disabled) %></span>
            </td>
            <td>
              <%= render 'shared/index_action_buttons',
                          show_path: bank_account_path(bank_account),
                          edit_path: edit_bank_account_path(bank_account),
                          delete_path: bank_account_path(bank_account) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= render 'shared/pagination', collection: @bank_accounts %>

  <%= render 'shared/masters_back_button' %>
</div>