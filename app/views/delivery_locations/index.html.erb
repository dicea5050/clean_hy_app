<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>納品先一覧</h1>
    <%= link_to '新規作成', new_delivery_location_path, class: 'btn btn-primary' %>
  </div>

  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="card shadow">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>取引先</th>
              <th>納品先名</th>
              <th>郵便番号</th>
              <th>住所</th>
              <th>電話番号</th>
              <th>担当者名</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @delivery_locations.each do |delivery_location| %>
              <tr>
                <td><%= delivery_location.customer.name %></td>
                <td><%= delivery_location.name %></td>
                <td><%= delivery_location.postal_code %></td>
                <td><%= delivery_location.address %></td>
                <td><%= delivery_location.phone %></td>
                <td><%= delivery_location.contact_person %></td>
                <td>
                  <%= link_to '詳細', delivery_location, class: 'btn btn-sm btn-info text-white' %>
                  <%= link_to '編集', edit_delivery_location_path(delivery_location), class: 'btn btn-sm btn-warning text-white' %>
                  <%= link_to '削除', delivery_location, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
