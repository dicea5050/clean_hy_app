<div class="container">
  <h1>受注詳細</h1>

  <% if flash[:alert] %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">基本情報</h5>
      <div class="row mb-3">
        <div class="col-md-3">
          <strong>受注番号:</strong>
          <%= @order.order_number %>
        </div>
        <div class="col-md-9">
          <% if @order.invoiced? %>
            <strong>請求書:</strong>
            <%= @order.related_invoices %>
          <% else %>
            <strong>請求書:</strong>
            <span style="display: inline-block; padding: 0.25em 0.6em; font-size: 0.75rem; font-weight: 700; line-height: 1; text-align: center; white-space: nowrap; vertical-align: baseline; border-radius: 0.375rem; color: #fff; background-color: #6c757d;">未発行</span>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <strong>取引先:</strong>
          <%= @order.customer.company_name %>
        </div>
        <div class="col-md-6">
          <strong>受注日:</strong>
          <%= l @order.order_date %>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-md-6">
          <strong>支払い方法:</strong>
          <%= @order.payment_method&.name %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-12">
          <%= link_to '納品書PDF発行', delivery_slip_order_path(@order, format: :pdf),
                  class: 'btn btn-success', target: '_blank', id: 'delivery-slip-btn',
                  data: { bs_toggle: 'tooltip', bs_placement: 'top', title: '納品書PDFを表示します',
                         has_delivery_date: @order.actual_delivery_date.present? } %>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">納品情報</h5>
      <% if @order.delivery_location.present? %>
        <div class="row mb-3">
          <div class="col-md-12">
            <strong>納品先:</strong>
            <%= @order.delivery_location.name %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-md-12">
            <strong>納品先住所:</strong>
            〒<%= @order.delivery_location.postal_code %> <%= @order.delivery_location.address %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-md-6">
            <strong>電話番号:</strong>
            <%= @order.delivery_location.phone %>
          </div>
          <div class="col-md-6">
            <strong>担当者:</strong>
            <%= @order.delivery_location.contact_person %>
          </div>
        </div>
      <% else %>
        <div class="row mb-3">
          <div class="col-md-12">
            <span class="text-muted">納品先情報がありません</span>
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="col-md-6">
          <strong>予定納品日:</strong>
          <%= l @order.expected_delivery_date if @order.expected_delivery_date %>
        </div>
        <div class="col-md-6">
          <strong>確定納品日:</strong>
          <%= l @order.actual_delivery_date if @order.actual_delivery_date %>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">注文明細</h5>
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税抜）</th>
            <th>税率（%）</th>
            <th>数量</th>
            <th>単位</th>
            <th>小計（税抜）</th>
            <th>小計（税込）</th>
            <th>備考</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_items.each do |item| %>
            <tr>
              <td><%= item.product.name %></td>
              <td><%= number_to_currency(item.unit_price) %></td>
              <td><%= item.tax_rate %></td>
              <td><%= item.quantity %></td>
              <td><%= item.unit&.name %></td>
              <td><%= item.product.is_discount_target? ? '-' : '' %><%= number_to_currency(item.subtotal_without_tax.abs) %></td>
              <td><%= item.product.is_discount_target? ? '-' : '' %><%= number_to_currency(item.subtotal.abs) %></td>
              <td><%= item.notes %></td>
            </tr>
          <% end %>
          <tr>
            <td colspan="4" class="text-right"><strong>合計（税抜）:</strong></td>
            <td></td>
            <td><strong><%= number_to_currency(@order.order_items.sum { |item| item.subtotal_without_tax }) %></strong></td>
          </tr>
          <tr>
            <td colspan="5" class="text-right"><strong>合計（税込）:</strong></td>
            <td></td>
            <td><strong><%= number_to_currency(@order.order_items.sum { |item| item.subtotal }) %></strong></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div>
    <%= link_to '編集', edit_order_path(@order), class: 'btn btn-primary' %>
    <%= link_to '一覧に戻る', orders_path, class: 'btn btn-secondary' %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const deliverySlipBtn = document.getElementById('delivery-slip-btn');

    if (deliverySlipBtn) {
      deliverySlipBtn.addEventListener('click', function(event) {
        const hasDeliveryDate = this.dataset.hasDeliveryDate === 'true';

        if (!hasDeliveryDate) {
          event.preventDefault();
          alert('確定納品日を入力してください');
          return false;
        }
      });
    }
  });
</script>