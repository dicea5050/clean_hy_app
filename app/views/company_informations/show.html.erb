<div class="container mt-4">
  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="card shadow mb-4">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">自社情報詳細</h2>
    </div>
    <div class="card-body">
      <div class="row mb-3">
        <div class="col-md-3 fw-bold">社名</div>
        <div class="col-md-9"><%= @company_information.name %></div>
      </div>
      
      <div class="row mb-3">
        <div class="col-md-3 fw-bold">郵便番号</div>
        <div class="col-md-9"><%= @company_information.postal_code %></div>
      </div>
      
      <div class="row mb-3">
        <div class="col-md-3 fw-bold">住所</div>
        <div class="col-md-9"><%= @company_information.address %></div>
      </div>
      
      <div class="row mb-3">
        <div class="col-md-3 fw-bold">電話番号</div>
        <div class="col-md-9"><%= @company_information.phone_number %></div>
      </div>
      
      <div class="row mb-3">
        <div class="col-md-3 fw-bold">FAX番号</div>
        <div class="col-md-9"><%= @company_information.fax_number.present? ? @company_information.fax_number : '未設定' %></div>
      </div>
      
      <div class="row mb-3">
        <div class="col-md-3 fw-bold">適格請求書番号</div>
        <div class="col-md-9"><%= @company_information.invoice_registration_number %></div>
      </div>
      
      <div class="row mb-3">
        <div class="col-md-3 fw-bold">社印</div>
        <div class="col-md-9">
          <% if @company_information.company_seal.attached? %>
            <p>添付ファイル情報: <%= @company_information.company_seal.blob.filename %></p>
            <p>コンテンツタイプ: <%= @company_information.company_seal.blob.content_type %></p>
            <p>サイズ: <%= @company_information.company_seal.blob.byte_size %> bytes</p>
            <%= image_tag @company_information.company_seal, class: 'img-thumbnail', style: 'max-width: 150px; max-height: 150px;' %>
          <% else %>
            未設定
          <% end %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= link_to '編集', edit_company_information_path(@company_information), class: 'btn btn-warning text-white me-2' %>
      <%= link_to '一覧に戻る', company_informations_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div> 