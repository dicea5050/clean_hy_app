<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>事業部マスター</h1>
    <%= link_to '新規事業部情報登録', new_product_category_path, class: 'btn btn-primary' %>
  </div>

  <div class="table-responsive">
    <table class="table product-categories-index-table" style="table-layout: fixed; width: 100%;">
      <thead>
        <tr>
          <th style="width: 200px;">事業部コード</th>
          <th style="width: 300px;">事業部名</th>
          <th style="width: 200px;">操作</th>
        </tr>
      </thead>

      <tbody>
        <% @product_categories.each do |product_category| %>
          <tr>
            <td><small><%= product_category.code %></small></td>
            <td><small><%= product_category.name %></small></td>
            <td>
            <%= render 'shared/index_action_buttons',
                        show_path: product_category_path(product_category),
                        edit_path: edit_product_category_path(product_category),
                        delete_path: product_category_path(product_category) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= render 'shared/pagination', collection: @product_categories %>

  <div class="mt-3">
    <%= link_to 'マスター一覧に戻る', masters_path, class: 'btn btn-secondary' %>
  </div>
</div>
