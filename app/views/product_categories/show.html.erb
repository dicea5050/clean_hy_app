<div class="container mt-4">
  <div class="card shadow mb-4">
    <div class="card-header bg-primary text-white">
      <h1 class="mb-0">事業部情報詳細</h1>
    </div>
    <div class="card-body">
      <div class="row mb-3">
        <div class="col-md-3 fw-bold">事業部コード</div>
        <div class="col-md-9"><%= @product_category.code %></div>
      </div>

      <div class="row mb-3">
        <div class="col-md-3 fw-bold">事業部名</div>
        <div class="col-md-9"><%= @product_category.name %></div>
      </div>
    </div>
    <div class="card-footer">
      <%= render 'shared/show_action_buttons', edit_path: edit_product_category_path(@product_category), delete_path: product_category_path(@product_category), back_path: product_categories_path %>
    </div>
  </div>
</div>
