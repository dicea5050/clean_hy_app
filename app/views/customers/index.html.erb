<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>顧客マスター</h1>
    <%= link_to '新規顧客登録', new_customer_path, class: 'btn btn-primary' %>
  </div>

  <!-- 検索フォーム -->
  <div class="card mb-4">
    <div class="card-body">
      <%= form_with url: customers_path, method: :get, local: true, class: "row g-3" do |form| %>
        <div class="col-md-4">
          <label for="customer_code_search" class="form-label">顧客コードで検索</label>
          <%= form.text_field :customer_code,
                              id: "customer_code_search",
                              class: "form-control",
                              placeholder: "顧客コードを入力",
                              value: params[:customer_code] %>
        </div>
        <div class="col-md-4">
          <label for="company_name_search" class="form-label">顧客名で検索</label>
          <div class="position-relative">
            <%= form.text_field :company_name,
                                id: "company_name_search",
                                class: "form-control",
                                placeholder: "顧客名を入力",
                                value: params[:company_name],
                                autocomplete: "off" %>
            <div id="company_name_suggestions" class="autocomplete-results position-absolute w-100 bg-white border rounded shadow-lg d-none"></div>
          </div>
        </div>
        <div class="col-md-4 d-flex align-items-end">
          <div class="btn-group w-100" role="group">
            <%= form.submit "検索", class: "btn btn-primary" %>
            <%= link_to "クリア", customers_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="thead-light">
            <tr>
              <th>顧客コード</th>
              <th>社名（屋号）</th>
              <th>部署</th>
              <th>担当者名</th>
              <th>電話番号</th>
              <th>請求書送付方法</th>
              <th>請求締日</th>
              <th>メールアドレス</th>
              <th colspan="3">操作</th>
            </tr>
          </thead>

          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.customer_code %></td>
                <td><%= customer.company_name %></td>
                <td><%= customer.department %></td>
                <td><%= customer.contact_name %></td>
                <td><%= customer.phone_number %></td>
                <td>
                  <%= render 'shared/invoice_delivery_method_badge', customer: customer %>
                </td>
                <td><%= customer.billing_closing_day_display %></td>
                <td><%= customer.email %></td>
                <td>
                  <%= render 'shared/index_action_buttons',
                              show_path: customer_path(customer),
                              edit_path: edit_customer_path(customer),
                              delete_path: customer_path(customer) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <%= paginate @customers %>
  </div>

  <%= render 'shared/masters_back_button' %>
</div>