<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>顧客マスター</h1>
    <%= link_to '新規顧客登録', new_customer_path, class: 'btn btn-primary' %>
  </div>

  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="thead-light">
            <tr>
              <th>顧客コード</th>
              <th>社名（屋号）</th>
              <th>部署</th>
              <th>担当者名</th>
              <th>電話番号</th>
              <th>請求書送付方法</th>
              <th>請求締日</th>
              <th>メールアドレス</th>
              <th colspan="3">操作</th>
            </tr>
          </thead>

          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.customer_code %></td>
                <td><%= customer.company_name %></td>
                <td><%= customer.department %></td>
                <td><%= customer.contact_name %></td>
                <td><%= customer.phone_number %></td>
                <td>
                  <% if customer.electronic? %>
                    <span class="badge bg-info">電子請求</span>
                  <% else %>
                    <span class="badge bg-secondary">郵送</span>
                  <% end %>
                </td>
                <td><%= customer.billing_closing_day_display %></td>
                <td><%= customer.email %></td>
                <td>
                  <%= link_to '詳細', customer_path(customer), class: 'btn btn-sm btn-info' %>
                  <%= link_to '編集', edit_customer_path(customer), class: 'btn btn-sm btn-success' %>
                  <%= link_to '削除', customer_path(customer), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <%= paginate @customers %>
  </div>
</div> 