<%= form_with(model: customer, local: true, html: { class: 'h-adr' }) do |form| %>
  <% if customer.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(customer.errors.count, "つのエラー") %> が発生しました:</h4>
      <ul>
        <% customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <span class="p-country-name d-none">Japan</span>

  <div class="form-group form-group-spacing">
    <div class="d-flex align-items-end gap-3">
      <div>
        <%= form.label :customer_code, '顧客コード' do %>
          顧客コード <span class="text-danger">*</span>
        <% end %>
        <%= form.text_field :customer_code, class: 'form-control form-control-width-100' %>
      </div>
      <div class="flex-fill">
        <%= form.label :company_name, '顧客名' do %>
          顧客名 <span class="text-danger">*</span>
        <% end %>
        <%= form.text_field :company_name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group form-group-spacing">
    <div class="d-flex align-items-end gap-3">
      <div>
        <%= form.label :postal_code, '郵便番号' do %>
          郵便番号 <span class="text-danger">*</span>
        <% end %>
        <%= form.text_field :postal_code, class: 'form-control p-postal-code form-control-width-100' %>
      </div>
      <div class="flex-fill">
        <%= form.label :address, '住所' do %>
          住所 <span class="text-danger">*</span>
        <% end %>
        <%= form.text_field :address, class: 'form-control p-region p-locality p-street-address' %>
      </div>
    </div>
  </div>

  <div class="form-group form-group-spacing">
    <div class="d-flex align-items-end gap-3">
      <div>
        <%= form.label :department, '部署名' %>
        <%= form.text_field :department, class: 'form-control' %>
      </div>
      <div>
        <%= form.label :contact_name, '担当者名' %>
        <%= form.text_field :contact_name, class: 'form-control' %>
      </div>
      <div>
        <%= form.label :phone_number, '電話番号' %>
        <%= form.text_field :phone_number, class: 'form-control' %>
      </div>
      <div>
        <%= form.label :fax_number, 'FAX番号' %>
        <%= form.text_field :fax_number, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group form-group-spacing">
    <div class="d-flex align-items-start gap-3 form-three-columns">
      <div>
        <%= form.label :email, 'メールアドレス' do %>
          メールアドレス <span id="email_required_mark" class="text-danger d-none">*</span>
        <% end %>
        <%= form.email_field :email, class: 'form-control', id: 'customer_email' %>
      </div>
      <div>
        <%= form.label :password, 'パスワード' %>
        <%= form.password_field :password, class: 'form-control' %>
        <% if customer.persisted? && customer.password_set? %>
          <small class="form-text text-muted">パスワードが設定済みです。変更する場合のみ入力してください。</small>
        <% else %>
          <small class="form-text text-muted">ネットショップ用のパスワードが未設定です。ネットショップでの袋購入をする場合は設定してください。</small>
        <% end %>
      </div>
      <div>
        <%= form.label :password_confirmation, 'パスワード（確認）' %>
        <%= form.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group form-group-spacing">
    <div class="d-flex align-items-end gap-3">
      <div>
        <%= form.label :payment_method_id, '支払い方法' do %>
          支払い方法 <span class="text-danger">*</span>
        <% end %>
        <%= form.collection_select :payment_method_id,
                     PaymentMethod.where(active: true).order(:name),
                     :id,
                     :name,
                     { include_blank: '選択してください' },
                     { class: 'form-select form-control-width-auto' } %>
      </div>
      <div>
        <%= form.label :invoice_delivery_method, '請求書送付方法' do %>
          請求書送付方法 <span class="text-danger">*</span>
        <% end %>
        <%= form.select :invoice_delivery_method,
                     Customer::INVOICE_DELIVERY_METHOD_OPTIONS,
                     { include_blank: '選択してください' },
                     { class: 'form-select form-control-width-auto', id: 'customer_invoice_delivery_method' } %>
      </div>
      <div>
        <%= form.label :billing_closing_day, '請求締日' do %>
          請求締日 <span class="text-danger">*</span>
        <% end %>
        <%= form.select :billing_closing_day,
                     Customer::BILLING_CLOSING_DAYS,
                     { include_blank: '選択してください' },
                     { class: 'form-select form-control-width-150' } %>
      </div>
    </div>
  </div>

  <div class="form-group mt-4">
    <%= render 'shared/form_actions', form: form, back_path: customers_path %>
  </div>
<% end %>