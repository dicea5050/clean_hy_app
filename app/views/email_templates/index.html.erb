<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>メールテンプレート管理</h1>
    <%= link_to new_email_template_path, class: 'btn btn-primary' do %>
      <i class="bi bi-plus-circle"></i> 新規作成
    <% end %>
  </div>

  <% if @email_templates.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>テンプレート名</th>
          <th>件名</th>
          <th>ステータス</th>
          <th>作成日時</th>
          <th>更新日時</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @email_templates.each do |template| %>
          <tr>
            <td><%= template.name %></td>
            <td><small><%= truncate(template.subject, length: 50) %></small></td>
            <td>
              <% if template.is_active? %>
                <span class="badge bg-success">有効</span>
              <% else %>
                <span class="badge bg-secondary">無効</span>
              <% end %>
            </td>
            <td><small><%= l template.created_at, format: :short %></small></td>
            <td><small><%= l template.updated_at, format: :short %></small></td>
            <td>
              <div class="d-flex gap-1">
                <%= link_to email_template_path(template), class: 'btn btn-sm btn-info', title: '詳細' do %>
                  <i class="bi bi-eye"></i>
                <% end %>
                <%= link_to edit_email_template_path(template), class: 'btn btn-sm btn-primary', title: '編集' do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
                <%= button_to email_template_path(template),
                              method: :delete,
                              form: { data: { turbo_confirm: '本当に削除しますか？' },
                                      class: 'd-inline' },
                              class: 'btn btn-sm btn-danger',
                              title: '削除' do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= render 'shared/pagination', collection: @email_templates %>
  <% else %>
    <div class="alert alert-info">
      メールテンプレートが登録されていません。
    </div>
  <% end %>
</div>
