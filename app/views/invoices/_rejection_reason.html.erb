<% if @invoice.approval_status == Invoice::APPROVAL_STATUSES[:rejected] && @invoice.latest_rejection_reason.present? %>
  <div class="card mb-4 border-danger">
    <div class="card-header bg-danger text-white">
      <h5 class="card-title mb-0">
        <i class="bi bi-exclamation-triangle"></i> 差し戻し理由
      </h5>
    </div>
    <div class="card-body">
      <p class="mb-0"><%= simple_format(@invoice.latest_rejection_reason) %></p>
    </div>
  </div>
<% end %>

