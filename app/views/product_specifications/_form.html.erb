<%= form_with(model: product_specification, local: true) do |f| %>
  <% if product_specification.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(product_specification.errors.count, "error") %> prohibited this product_specification from being saved:</h4>
      <ul>
        <% product_specification.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, '規格名', class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :is_active, 'ステータス', class: 'form-label' %>
    <%= f.select :is_active, 
      options_for_select([['有効', true], ['無効', false]], product_specification.is_active),
      {}, 
      { class: 'form-select' } 
    %>
  </div>

  <%= render 'shared/form_actions', form: f, back_path: product_specifications_path %>
<% end %>