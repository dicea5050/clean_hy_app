<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h2>商品規格の詳細</h2>
    </div>
    <div class="card-body">
      <div class="mb-3">
        <strong>規格名:</strong> <%= @product_specification.name %>
      </div>

      <div class="mb-3">
        <strong>ステータス:</strong>
        <span class="badge <%= @product_specification.is_active ? 'bg-success' : 'bg-danger' %>">
          <%= @product_specification.is_active ? '有効' : '無効' %>
        </span>
      </div>

      <div class="mb-3">
        <strong>作成日時:</strong> <%= l @product_specification.created_at, format: :long %>
      </div>

      <div class="mb-3">
        <strong>更新日時:</strong> <%= l @product_specification.updated_at, format: :long %>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <%= render 'shared/show_action_buttons', edit_path: edit_product_specification_path(@product_specification), delete_path: product_specification_path(@product_specification), back_path: product_specifications_path %>
  </div>
</div>
