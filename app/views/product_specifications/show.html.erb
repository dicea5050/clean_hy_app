<div class="container mt-4">
  <div class="card shadow mb-4">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">商品規格の詳細</h2>
    </div>
    <div class="card-body">
      <div class="row mb-3">
        <div class="col-md-3 fw-bold">規格名</div>
        <div class="col-md-9"><%= @product_specification.name %></div>
      </div>

      <div class="row mb-3">
        <div class="col-md-3 fw-bold">ステータス</div>
        <div class="col-md-9">
          <span class="badge <%= @product_specification.is_active ? 'bg-success' : 'bg-danger' %>">
            <%= @product_specification.is_active ? '有効' : '無効' %>
          </span>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-3 fw-bold">作成日時</div>
        <div class="col-md-9"><%= l @product_specification.created_at, format: :long %></div>
      </div>

      <div class="row mb-3">
        <div class="col-md-3 fw-bold">更新日時</div>
        <div class="col-md-9"><%= l @product_specification.updated_at, format: :long %></div>
      </div>
    </div>
    <div class="card-footer">
      <%= render 'shared/show_action_buttons', edit_path: edit_product_specification_path(@product_specification), delete_path: product_specification_path(@product_specification), back_path: product_specifications_path %>
    </div>
  </div>
</div>
