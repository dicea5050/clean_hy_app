<div class="container mt-4">
    <h1>商品規格の詳細</h1>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="row mb-3">
        <div class="col-md-3">
          <strong>規格名:</strong>
        </div>
        <div class="col-md-9">
          <%= @product_specification.name %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-3">
          <strong>ステータス:</strong>
        </div>
        <div class="col-md-9">
          <span class="badge <%= @product_specification.is_active ? 'bg-success' : 'bg-danger' %>">
            <%= @product_specification.is_active ? '有効' : '無効' %>
          </span>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-3">
          <strong>作成日時:</strong>
        </div>
        <div class="col-md-9">
          <%= l @product_specification.created_at, format: :long %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3">
          <strong>更新日時:</strong>
        </div>
        <div class="col-md-9">
          <%= l @product_specification.updated_at, format: :long %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <%= render 'shared/show_action_buttons', edit_path: edit_product_specification_path(@product_specification), delete_path: product_specification_path(@product_specification), back_path: product_specifications_path %>
  </div>
</div>
