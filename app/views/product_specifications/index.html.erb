<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>商品規格マスター</h1>
    <%= link_to '新規作成', new_product_specification_path, class: 'btn btn-primary' %>
  </div>

  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="thead-light">
        <tr>
          <th>規格名</th>
          <th>ステータス</th>
          <th>操作</th>
        </tr>
      </thead>

      <tbody>
        <% @product_specifications.each do |specification| %>
          <tr>
            <td><%= specification.name %></td>
            <td>
              <span class="badge <%= specification.is_active ? 'bg-success' : 'bg-danger' %>">
                <%= specification.is_active ? '有効' : '無効' %>
              </span>
            </td>
            <td>
              <%= render 'shared/index_action_buttons',
                          show_path: product_specification_path(specification),
                          edit_path: edit_product_specification_path(specification),
                          delete_path: product_specification_path(specification) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= render 'shared/masters_back_button' %>
</div>
