<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>商品規格マスター</h1>
    <%= link_to '新規作成', new_product_specification_path, class: 'btn btn-primary' %>
  </div>

  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="thead-light">
        <tr>
          <th>規格名</th>
          <th>ステータス</th>
          <th>操作</th>
        </tr>
      </thead>

      <tbody>
        <% @product_specifications.each do |specification| %>
          <tr>
            <td><%= specification.name %></td>
            <td>
              <span class="badge <%= specification.is_active ? 'bg-success' : 'bg-danger' %>">
                <%= specification.is_active ? '有効' : '無効' %>
              </span>
            </td>
            <td>
              <%= link_to '詳細', product_specification_path(specification), class: 'btn btn-sm btn-info me-2' %>
              <%= link_to '編集', edit_product_specification_path(specification), class: 'btn btn-sm btn-primary me-2' %>
              <%= link_to '削除', product_specification_path(specification), 
                  method: :delete, 
                  data: { confirm: '本当に削除しますか？' }, 
                  class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-3">
    <%= link_to 'マスター一覧に戻る', masters_path, class: 'btn btn-secondary' %>
  </div>
</div>
