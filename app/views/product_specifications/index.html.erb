<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>商品規格マスター</h1>
    <%= link_to '新規作成', new_product_specification_path, class: 'btn btn-primary' %>
  </div>

  <div class="table-responsive">
    <table class="table product-specifications-index-table" style="table-layout: fixed; width: 100%;">
      <thead>
        <tr>
          <th style="width: 250px;">規格名</th>
          <th style="width: 100px;">ステータス</th>
          <th style="width: 250px;">操作</th>
        </tr>
      </thead>

      <tbody>
        <% @product_specifications.each do |specification| %>
          <tr>
            <td><small><%= specification.name %></small></td>
            <td>
              <span class="badge <%= specification.is_active ? 'bg-success' : 'bg-danger' %>">
                <%= specification.is_active ? '有効' : '無効' %>
              </span>
            </td>
            <td>
              <%= render 'shared/index_action_buttons',
                          show_path: product_specification_path(specification),
                          edit_path: edit_product_specification_path(specification),
                          delete_path: product_specification_path(specification) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= render 'shared/pagination', collection: @product_specifications %>

  <%= render 'shared/masters_back_button' %>
</div>
