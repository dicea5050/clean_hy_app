<!DOCTYPE html>
<html>
<head>
  <title>オンラインショップ</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <script type="module" src="<%= asset_path 'application.js' %>"></script>
</head>
<body class="shop-layout">
  <header class="shop-header">
    <div class="container">
      <h1 class="shop-title">オンラインショップ</h1>
      <nav class="shop-nav">
        <ul>
          <li><%= link_to '商品一覧', shop_products_path %></li>
          <li><%= link_to 'カート', shop_cart_path %></li>
          <% if customer_signed_in? %>
            <li>
              <%= current_customer.name %>様 |
              <%= button_to 'ログアウト', shop_logout_path, method: :delete, class: 'btn btn-link' %>
            </li>
          <% else %>
            <li><%= link_to 'ログイン', shop_login_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>

  <main class="container">
    <% if notice %>
      <div class="alert alert-success"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger"><%= alert %></div>
    <% end %>

    <%= yield %>
  </main>

  <footer class="shop-footer">
    <div class="container">
      <p>&copy; <%= Date.current.year %> オンラインショップ</p>
    </div>
  </footer>
</body>
</html>