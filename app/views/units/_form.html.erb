      <h4><%= pluralize(unit.errors.count, "error") %> prohibited this unit from being saved:</h4>
      <ul>
        <% unit.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= f.label :name, '単位名', class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
