<div class="container mt-4">
  <h1>単位の詳細</h1>

  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <label class="form-label fw-bold">単位名</label>
        <p class="form-control-static"><%= @unit.name %></p>
      </div>

      <div class="mt-4">
        <%= render 'shared/show_action_buttons', edit_path: edit_unit_path(@unit), delete_path: unit_path(@unit), back_path: units_path %>
      </div>
    </div>
  </div>
</div>
