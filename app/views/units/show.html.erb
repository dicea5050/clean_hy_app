<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h2>単位の詳細</h2>
    </div>
    <div class="card-body">
      <div class="mb-3">
        <strong>単位名:</strong> <%= @unit.name %>
      </div>

      <div class="mt-4">
        <%= render 'shared/show_action_buttons', edit_path: edit_unit_path(@unit), delete_path: unit_path(@unit), back_path: units_path %>
      </div>
    </div>
  </div>
</div>
