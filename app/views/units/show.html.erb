<div class="container mt-4">
  <h1>単位の詳細</h1>

  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <label class="form-label fw-bold">単位名</label>
        <p class="form-control-static"><%= @unit.name %></p>
      </div>

      <div class="mt-4">
        <%= link_to '編集', edit_unit_path(@unit), class: 'btn btn-primary me-2' %>
        <%= link_to '削除', unit_path(@unit), 
            method: :delete, 
            data: { confirm: '本当に削除しますか？' }, 
            class: 'btn btn-danger me-2' %>
        <%= link_to '一覧に戻る', units_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
