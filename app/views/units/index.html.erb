<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>単位マスター</h1>
    <%= link_to '新規登録', new_unit_path, class: 'btn btn-primary' %>
  </div>

  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th>単位名</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @units.each do |unit| %>
            <tr>
              <td><%= unit.name %></td>
              <td>
                <%= link_to '詳細', unit_path(unit), class: 'btn btn-sm btn-outline-info me-2' %>
                <%= link_to '編集', edit_unit_path(unit), class: 'btn btn-sm btn-outline-primary me-2' %>
                <%= link_to '削除', unit_path(unit), 
                    method: :delete, 
                    data: { confirm: '本当に削除しますか？' }, 
                    class: 'btn btn-sm btn-outline-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to 'マスター一覧に戻る', masters_path, class: 'btn btn-secondary' %>
  </div>
</div>
