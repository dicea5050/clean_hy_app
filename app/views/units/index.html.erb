<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>単位マスター</h1>
    <%= link_to '新規登録', new_unit_path, class: 'btn btn-primary' %>
  </div>

  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th>単位名</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @units.each do |unit| %>
            <tr>
              <td><%= unit.name %></td>
              <td>
                <%= render 'shared/index_action_buttons',
                            show_path: unit_path(unit),
                            edit_path: edit_unit_path(unit),
                            delete_path: unit_path(unit) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= render 'shared/masters_back_button' %>
</div>
