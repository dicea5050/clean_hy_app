<% if local_assigns[:edit_path].present? %>
  <%= link_to t('buttons.edit', default: '編集'), local_assigns[:edit_path], class: 'btn btn-sm btn-success me-2' %>
<% end %>
<% if local_assigns[:delete_path].present? %>
  <%= link_to t('buttons.destroy', default: '削除'), local_assigns[:delete_path], method: :delete, data: { confirm: (local_assigns[:confirm_text] || t('confirms.destroy', default: '本当に削除しますか？')) }, class: 'btn btn-sm btn-danger me-1' %>
<% end %>
<%= link_to t('buttons.back', default: '一覧に戻る'), local_assigns[:back_path], class: 'btn btn-sm btn-secondary' %>
