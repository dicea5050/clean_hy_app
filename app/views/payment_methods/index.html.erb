<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>支払方法一覧</h1>
    <%= link_to '新規支払方法', new_payment_method_path, class: 'btn btn-primary' %>
  </div>

  <% if notice.present? %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>名前</th>
              <th>説明</th>
              <th>ステータス</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% @payment_methods.each do |payment_method| %>
              <tr>
                <td><%= payment_method.id %></td>
                <td><%= payment_method.name %></td>
                <td><%= payment_method.description %></td>
                <td>
                  <% if payment_method.active? %>
                    <span class="text-dark">有効</span>
                  <% else %>
                    <span class="text-dark">無効</span>
                  <% end %>
                </td>
                <td>
                  <%= link_to '詳細', payment_method_path(payment_method), class: 'btn btn-sm btn-info' %>
                  <%= link_to '編集', edit_payment_method_path(payment_method), class: 'btn btn-sm btn-warning' %>
                  <%= link_to '削除', payment_method_path(payment_method), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to 'マスター一覧に戻る', masters_path, class: 'btn btn-secondary' %>
  </div>
</div> 