<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>支払方法一覧</h1>
    <%= link_to '新規支払方法', new_payment_method_path, class: 'btn btn-primary' %>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>名前</th>
              <th>説明</th>
              <th>ステータス</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% @payment_methods.each do |payment_method| %>
              <tr>
                <td><%= payment_method.id %></td>
                <td><%= payment_method.name %></td>
                <td><%= payment_method.description %></td>
                <td>
                  <% if payment_method.active? %>
                    <span class="text-dark">有効</span>
                  <% else %>
                    <span class="text-dark">無効</span>
                  <% end %>
                </td>
                <td>
                  <%= render 'shared/index_action_buttons',
                              show_path: payment_method_path(payment_method),
                              edit_path: edit_payment_method_path(payment_method),
                              delete_path: payment_method_path(payment_method) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-3">
    <%= paginate @payment_methods %>
  </div>

  <%= render 'shared/masters_back_button' %>
</div>