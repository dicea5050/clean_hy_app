<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h1>支払方法の詳細</h1>
    </div>
    <div class="card-body">
      <div class="mb-3">
        <strong>ID:</strong> <%= @payment_method.id %>
      </div>

      <div class="mb-3">
        <strong>名前:</strong> <%= @payment_method.name %>
      </div>

      <div class="mb-3">
        <strong>説明:</strong> <%= @payment_method.description %>
      </div>

      <div class="mb-3">
        <strong>ステータス:</strong>
        <% if @payment_method.active? %>
          <span class="badge badge-success">有効</span>
        <% else %>
          <span class="badge badge-secondary">無効</span>
        <% end %>
      </div>

      <div class="mb-3">
        <strong>作成日時:</strong> <%= @payment_method.created_at.strftime('%Y/%m/%d %H:%M') %>
      </div>

      <div class="mb-3">
        <strong>更新日時:</strong> <%= @payment_method.updated_at.strftime('%Y/%m/%d %H:%M') %>
      </div>
    </div>
    <div class="card-footer">
      <%= render 'shared/show_action_buttons', edit_path: edit_payment_method_path(@payment_method), delete_path: payment_method_path(@payment_method), back_path: payment_methods_path %>
    </div>
  </div>
</div>