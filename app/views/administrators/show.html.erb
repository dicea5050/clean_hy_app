<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h2>管理者詳細</h2>
    </div>
    <div class="card-body">
      <div class="mb-3">
        <strong>メールアドレス:</strong> <%= @administrator.email %>
      </div>

      <div class="mb-3">
        <strong>権限:</strong> <%= @administrator.role_name %>
      </div>
    </div>
    <div class="card-footer">
      <%= render 'shared/show_action_buttons',
                 edit_path: edit_administrator_path(@administrator),
                 delete_path: administrator_path(@administrator),
                 back_path: administrators_path %>
    </div>
  </div>
</div>