<div class="container mt-4">
  <div class="card shadow mb-4">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">管理者詳細</h2>
    </div>
    <div class="card-body">
      <div class="row mb-3">
        <div class="col-md-3 fw-bold">メールアドレス</div>
        <div class="col-md-9"><%= @administrator.email %></div>
      </div>

      <div class="row mb-3">
        <div class="col-md-3 fw-bold">権限</div>
        <div class="col-md-9"><%= @administrator.role_name %></div>
      </div>
    </div>
    <div class="card-footer">
      <%= render 'shared/show_action_buttons',
                 edit_path: edit_administrator_path(@administrator),
                 delete_path: administrator_path(@administrator),
                 back_path: administrators_path %>
    </div>
  </div>
</div>