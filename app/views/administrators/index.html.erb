<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>管理者マスター</h1>
    <%= link_to '新規管理者登録', new_administrator_path, class: 'btn btn-primary' %>
  </div>

  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="thead-light">
            <tr>
              <th>メールアドレス</th>
              <th>権限</th>
              <th colspan="3">操作</th>
            </tr>
          </thead>

          <tbody>
            <% @administrators.each do |administrator| %>
              <tr>
                <td><%= administrator.email %></td>
                <td><%= administrator.role_name %></td>
                <td>
                  <%= link_to '詳細', administrator_path(administrator), class: 'btn btn-sm btn-info' %>
                  <%= link_to '編集', edit_administrator_path(administrator), class: 'btn btn-sm btn-success' %>
                  <%= link_to '削除', administrator_path(administrator), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <div class="mt-3">
    <%= link_to 'マスター一覧へ戻る', masters_path, class: 'btn btn-secondary' %>
  </div>
</div> 