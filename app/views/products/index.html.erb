<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>商品マスター</h1>
    <%= link_to '新規商品登録', new_product_path, class: 'btn btn-primary' %>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="thead-light">
            <tr>
              <th>商品コード</th>
              <th>商品名</th>
              <th>単価（税抜）</th>
              <th>適用税率</th>
              <th>税率(%)</th>
              <th>値引き</th>
              <th colspan="3">操作</th>
            </tr>
          </thead>

          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.product_code %></td>
                <td><%= product.name %></td>
                <td><%= number_to_currency(product.price, unit: '¥', format: '%u%n') if product.price.present? %></td>
                <td><%= product.tax_rate.name %></td>
                <td><%= product.tax_rate.rate %></td>
                <td><%= product.is_discount_target ? '対象' : '-' %></td>
                <td>
                  <%= link_to '詳細', product_path(product), class: 'btn btn-sm btn-info' %>
                  <%= link_to '編集', edit_product_path(product), class: 'btn btn-sm btn-success' %>
                  <%= link_to '削除', product_path(product), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>