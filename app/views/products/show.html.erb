<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h2>商品詳細</h2>
    </div>
    <div class="card-body">
      <div class="mb-3">
        <strong>商品コード:</strong> <%= @product.product_code %>
      </div>

      <div class="mb-3">
        <strong>商品名:</strong> <%= @product.name %>
      </div>

      <div class="mb-3">
        <strong>カテゴリー:</strong> <%= @product.product_category.code %> - <%= @product.product_category.name %>
      </div>

      <div class="mb-3">
        <strong>単価（税抜）:</strong> <%= number_to_currency(@product.price, unit: '¥', format: '%u%n') if @product.price.present? %>
      </div>

      <div class="mb-3">
        <strong>値引き:</strong>
        <% if @product.is_discount_target %>
          対象
        <% else %>
          なし
        <% end %>
      </div>

      <div class="mb-3">
        <strong>適用税率:</strong> <%= @product.tax_rate.name %>
      </div>

      <div class="mb-3">
        <strong>税率(%):</strong> <%= @product.tax_rate.rate %>
      </div>

      <div class="mb-3">
        <strong>在庫数:</strong>
        <% if @product.stock.nil? %>
          無制限
        <% else %>
          <%= @product.stock %>個
        <% end %>
      </div>

      <div class="mb-3">
        <strong>公開状態:</strong> <%= @product.is_public? ? '公開' : '非公開' %>
      </div>
    </div>
    <div class="card-footer">
      <%= render 'shared/show_action_buttons', edit_path: edit_product_path(@product), delete_path: product_path(@product), back_path: products_path %>
    </div>
  </div>
</div>