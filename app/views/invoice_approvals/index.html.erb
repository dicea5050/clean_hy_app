<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>請求書承認一覧</h1>
  </div>

  <% if @invoice_approvals.any? %>
    <!-- 一括操作ボタン -->
    <div class="mb-3">
      <button type="button" class="btn btn-success me-2" id="bulk-approve-btn" disabled>
        <i class="bi bi-check-circle"></i> 選択した請求書を承認
      </button>
      <button type="button" class="btn btn-danger" id="bulk-reject-btn" disabled>
        <i class="bi bi-x-circle"></i> 選択した請求書を差し戻し
      </button>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>
            <input type="checkbox" id="select-all" class="form-check-input">
          </th>
          <th>請求書番号</th>
          <th>取引先</th>
          <th>請求日</th>
          <th>支払期限</th>
          <th>合計金額（税込）</th>
          <th>申請日時</th>
          <th>操作</th>
        </tr>
      </thead>

      <tbody>
        <% @invoice_approvals.each do |approval| %>
          <tr>
            <td>
              <input type="checkbox" name="approval_ids[]" value="<%= approval.id %>" class="form-check-input approval-checkbox">
            </td>
            <td><%= link_to approval.invoice.invoice_number, invoice_path(approval.invoice) %></td>
            <td><%= approval.invoice.customer.company_name %></td>
            <td><%= l approval.invoice.invoice_date %></td>
            <td><%= l approval.invoice.due_date if approval.invoice.due_date %></td>
            <td><%= number_to_currency(approval.invoice.total_amount) %></td>
            <td><%= l approval.created_at, format: :month_day_time %></td>
            <td>
              <%= render 'shared/detail_button', path: invoice_path(approval.invoice), extra_class: 'me-2' %>
              <%= render 'shared/invoice_pdf_button', invoice: approval.invoice, text: 'PDF', extra_class: 'me-2' %>
              <%= button_to '承認', approve_invoice_approval_path(approval), 
                          class: 'btn btn-sm btn-success me-2 d-inline',
                          form: { class: 'd-inline' },
                          data: { turbo_confirm: '承認してよろしいですか？' } %>
              <button type="button" class="btn btn-sm btn-danger" 
                      data-bs-toggle="modal" 
                      data-bs-target="#rejectModal<%= approval.id %>">
                差戻
              </button>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info">
      承認待ちの請求書はありません。
    </div>
  <% end %>

  <div class="d-flex justify-content-center">
    <%= paginate @invoice_approvals %>
  </div>
</div>

<!-- 個別差し戻しモーダル -->
<% if @invoice_approvals.any? %>
  <% @invoice_approvals.each do |approval| %>
  <div class="modal fade" id="rejectModal<%= approval.id %>" tabindex="-1" aria-labelledby="rejectModalLabel<%= approval.id %>" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="rejectModalLabel<%= approval.id %>">差し戻し理由</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <%= form_with url: reject_invoice_approval_path(approval), method: :post, local: true, id: "rejectForm#{approval.id}" do |form| %>
          <div class="modal-body">
            <div class="mb-3">
              <p><strong>請求書番号:</strong> <%= approval.invoice.invoice_number %></p>
              <p><strong>取引先:</strong> <%= approval.invoice.customer.company_name %></p>
            </div>
            <div class="mb-3">
              <label for="rejection_reason_<%= approval.id %>" class="form-label">差し戻し理由（任意）</label>
              <%= form.text_area :rejection_reason, 
                                class: 'form-control', 
                                id: "rejection_reason_#{approval.id}",
                                rows: 4,
                                placeholder: '差し戻し理由を入力してください' %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">キャンセル</button>
            <%= form.submit '差し戻す', class: 'btn btn-danger' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
<% end %>

<!-- 一括差し戻しモーダル -->
<div class="modal fade" id="bulkRejectModal" tabindex="-1" aria-labelledby="bulkRejectModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="bulkRejectModalLabel">一括差し戻し理由</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with url: bulk_reject_invoice_approvals_path, method: :post, local: true, id: "bulkRejectForm" do |form| %>
        <div class="modal-body">
          <div class="mb-3">
            <p class="text-muted">選択した請求書全てに同じ差し戻し理由が適用されます。</p>
          </div>
          <div class="mb-3">
            <label for="bulk_rejection_reason" class="form-label">差し戻し理由（任意）</label>
            <%= form.text_area :rejection_reason, 
                              class: 'form-control', 
                              id: "bulk_rejection_reason",
                              rows: 4,
                              placeholder: '差し戻し理由を入力してください' %>
          </div>
          <%= hidden_field_tag :approval_ids, '', id: 'bulkRejectApprovalIds' %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">キャンセル</button>
          <%= form.submit '差し戻す', class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    // 全選択チェックボックス
    $('#select-all').on('change', function() {
      $('.approval-checkbox').prop('checked', $(this).prop('checked'));
      updateBulkButtonState();
    });

    // 個別チェックボックスの変更
    $(document).on('change', '.approval-checkbox', function() {
      // 全選択チェックボックスの状態を更新
      var totalCheckboxes = $('.approval-checkbox').length;
      var checkedCheckboxes = $('.approval-checkbox:checked').length;
      $('#select-all').prop('checked', totalCheckboxes > 0 && totalCheckboxes === checkedCheckboxes);
      updateBulkButtonState();
    });

    // 一括承認ボタンのクリック
    $('#bulk-approve-btn').on('click', function() {
      var selectedIds = $('.approval-checkbox:checked').map(function() {
        return $(this).val();
      }).get();

      if (selectedIds.length === 0) {
        alert('請求書を選択してください。');
        return;
      }

      if (!confirm('選択した請求書を承認しますか？')) {
        return;
      }

      // フォームを作成して送信
      var form = $('<form>', {
        'method': 'POST',
        'action': '<%= bulk_approve_invoice_approvals_path %>'
      });

      form.append($('<input>', {
        'type': 'hidden',
        'name': 'authenticity_token',
        'value': $('meta[name="csrf-token"]').attr('content')
      }));

      form.append($('<input>', {
        'type': 'hidden',
        'name': 'approval_ids',
        'value': selectedIds.join(',')
      }));

      $('body').append(form);
      form.submit();
    });

    // 一括差し戻しボタンのクリック
    $('#bulk-reject-btn').on('click', function() {
      var selectedIds = $('.approval-checkbox:checked').map(function() {
        return $(this).val();
      }).get();

      if (selectedIds.length === 0) {
        alert('請求書を選択してください。');
        return;
      }

      // 選択されたIDをモーダルに設定
      $('#bulkRejectApprovalIds').val(selectedIds.join(','));
      // モーダルを開く（Bootstrap 5のAPI）
      var modalElement = document.getElementById('bulkRejectModal');
      var modal = new bootstrap.Modal(modalElement);
      modal.show();
    });

    // ボタンの有効/無効を更新
    function updateBulkButtonState() {
      var hasChecked = $('.approval-checkbox:checked').length > 0;
      $('#bulk-approve-btn').prop('disabled', !hasChecked);
      $('#bulk-reject-btn').prop('disabled', !hasChecked);
    }

    // 初期状態を設定
    updateBulkButtonState();
  });
</script> 