<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>請求書承認一覧</h1>
  </div>

  <% if @invoice_approvals.any? %>
    <!-- 一括操作ボタン -->
    <div class="mb-3">
      <button type="button" class="btn btn-success me-2" id="bulk-approve-btn" disabled>
        <i class="bi bi-check-circle"></i> 選択した請求書を承認
      </button>
      <button type="button" class="btn btn-danger" id="bulk-reject-btn" disabled>
        <i class="bi bi-x-circle"></i> 選択した請求書を差し戻し
      </button>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>
            <input type="checkbox" id="select-all" class="form-check-input">
          </th>
          <th>請求書番号</th>
          <th>取引先</th>
          <th>請求日</th>
          <th>支払期限</th>
          <th>合計金額（税込）</th>
          <th>申請日時</th>
          <th>操作</th>
        </tr>
      </thead>

      <tbody>
        <% @invoice_approvals.each do |approval| %>
          <tr>
            <td>
              <input type="checkbox" name="approval_ids[]" value="<%= approval.id %>" class="form-check-input approval-checkbox">
            </td>
            <td><%= link_to approval.invoice.invoice_number, invoice_path(approval.invoice) %></td>
            <td><%= approval.invoice.customer.company_name %></td>
            <td><%= l approval.invoice.invoice_date %></td>
            <td><%= l approval.invoice.due_date if approval.invoice.due_date %></td>
            <td><%= number_to_currency(approval.invoice.total_amount) %></td>
            <td><%= l approval.created_at, format: :month_day_time %></td>
            <td>
              <%= link_to '詳細', invoice_path(approval.invoice), class: 'btn btn-sm btn-info me-2' %>
              <%= link_to 'PDF', pdf_invoice_path(approval.invoice, format: :pdf), 
                          class: 'btn btn-sm btn-secondary me-2', 
                          target: '_blank' %>
              <%= button_to '承認', approve_invoice_approval_path(approval), 
                          class: 'btn btn-sm btn-success me-2 d-inline',
                          form: { class: 'd-inline' },
                          data: { turbo_confirm: '承認してよろしいですか？' } %>
              <%= button_to '差戻', reject_invoice_approval_path(approval), 
                          class: 'btn btn-sm btn-danger d-inline',
                          form: { class: 'd-inline' },
                          data: { turbo_confirm: '差し戻してよろしいですか？' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info">
      承認待ちの請求書はありません。
    </div>
  <% end %>

  <div class="d-flex justify-content-center">
    <%= paginate @invoice_approvals %>
  </div>
</div>

<script>
  $(document).ready(function() {
    // 全選択チェックボックス
    $('#select-all').on('change', function() {
      $('.approval-checkbox').prop('checked', $(this).prop('checked'));
      updateBulkButtonState();
    });

    // 個別チェックボックスの変更
    $(document).on('change', '.approval-checkbox', function() {
      // 全選択チェックボックスの状態を更新
      var totalCheckboxes = $('.approval-checkbox').length;
      var checkedCheckboxes = $('.approval-checkbox:checked').length;
      $('#select-all').prop('checked', totalCheckboxes > 0 && totalCheckboxes === checkedCheckboxes);
      updateBulkButtonState();
    });

    // 一括承認ボタンのクリック
    $('#bulk-approve-btn').on('click', function() {
      var selectedIds = $('.approval-checkbox:checked').map(function() {
        return $(this).val();
      }).get();

      if (selectedIds.length === 0) {
        alert('請求書を選択してください。');
        return;
      }

      if (!confirm('選択した請求書を承認しますか？')) {
        return;
      }

      // フォームを作成して送信
      var form = $('<form>', {
        'method': 'POST',
        'action': '<%= bulk_approve_invoice_approvals_path %>'
      });

      form.append($('<input>', {
        'type': 'hidden',
        'name': 'authenticity_token',
        'value': $('meta[name="csrf-token"]').attr('content')
      }));

      form.append($('<input>', {
        'type': 'hidden',
        'name': 'approval_ids',
        'value': selectedIds.join(',')
      }));

      $('body').append(form);
      form.submit();
    });

    // 一括差し戻しボタンのクリック
    $('#bulk-reject-btn').on('click', function() {
      var selectedIds = $('.approval-checkbox:checked').map(function() {
        return $(this).val();
      }).get();

      if (selectedIds.length === 0) {
        alert('請求書を選択してください。');
        return;
      }

      if (!confirm('選択した請求書を差し戻しますか？')) {
        return;
      }

      // フォームを作成して送信
      var form = $('<form>', {
        'method': 'POST',
        'action': '<%= bulk_reject_invoice_approvals_path %>'
      });

      form.append($('<input>', {
        'type': 'hidden',
        'name': 'authenticity_token',
        'value': $('meta[name="csrf-token"]').attr('content')
      }));

      form.append($('<input>', {
        'type': 'hidden',
        'name': 'approval_ids',
        'value': selectedIds.join(',')
      }));

      $('body').append(form);
      form.submit();
    });

    // ボタンの有効/無効を更新
    function updateBulkButtonState() {
      var hasChecked = $('.approval-checkbox:checked').length > 0;
      $('#bulk-approve-btn').prop('disabled', !hasChecked);
      $('#bulk-reject-btn').prop('disabled', !hasChecked);
    }

    // 初期状態を設定
    updateBulkButtonState();
  });
</script> 