<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2>税率詳細</h2>
    </div>
    <div class="card-body">
      <dl class="row">
        <dt class="col-sm-3">税率名:</dt>
        <dd class="col-sm-9"><%= @tax_rate.name %></dd>

        <dt class="col-sm-3">税率(%):</dt>
        <dd class="col-sm-9"><%= @tax_rate.rate %></dd>

        <dt class="col-sm-3">適用開始日:</dt>
        <dd class="col-sm-9"><%= @tax_rate.start_date.strftime('%Y/%m/%d') %></dd>

        <dt class="col-sm-3">適用終了日:</dt>
        <dd class="col-sm-9"><%= @tax_rate.end_date&.strftime('%Y/%m/%d') %></dd>
      </dl>
    </div>
    <div class="card-footer">
      <%= link_to '編集', edit_tax_rate_path(@tax_rate), class: 'btn btn-success' %>
      <%= link_to '戻る', tax_rates_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div> 